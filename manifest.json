{
  "name": "SnipIt",
  "description": "SnipIt is a Chrome Extension that lets users save snippets of highlighted text.",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "/images/snipIt_16.png",
        "32": "/images/snipIt_32.png",
        "48": "/images/snipIt_48.png",
        "128": "/images/snipIt_128.png"
      }
  },  
  "icons": {
    "16": "/images/snipIt_16.png",
    "32": "/images/snipIt_32.png",
    "48": "/images/snipIt_48.png",
    "128": "/images/snipIt_128.png"
  },
  "options_page": "options.html"
}